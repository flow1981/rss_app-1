
<%= form_tag ({controller: 'feeds', action: 'create_feed', method: 'post'}) do %>
        
    <div class="form-group">
        <div class="form-row">
        <div class="col-5">
            <label>Feed URL: </label>
            <%= text_field(:feed, :link) %>
        </div>
        </div>
    </div> 

    <div class="form-group">
        <div class="form-row">
            <div class="col-5">
                <label>Folder Name: </label>
                <%= collection_select(:feed, :folder_id, @user.folders, :id, :name) %>
            </div>
        </div>
    </div> 
        
    <input type=submit value='add feed'>

<% end %>

