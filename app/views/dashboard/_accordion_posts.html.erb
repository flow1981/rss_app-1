<div class="accordion" id="posts-accordion">
  <% @posts.each do |post| %>

    <div class="card">
      <div class="card-header">
        <h2 class="mb-0">
          <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            <%= post.title %>
          </button>
        </h2>
      <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#posts-accordion">
        <div class="card-body">
        
          <h6 class="card-text text-muted" > <%= post.feed.title %> </h6>
          <p class="card-text"> <%# post.published_time %> </p>
          <p class="card-text"> <%#raw post.description %> </p>
        </div>
    </div>

  <%end%>
</div>