<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4 bg-secondary text-white">
      <h3>Folders > Feeds</h3>
      <ul>
      <% @user.folders.each do |folder| %>
        <li><%= link_to folder.name, "/#{@user.username}/#{folder.name}", class: "text-light"%></li>
        <ul>
        <% folder.feeds.each do |feed| %>
          <li><%= link_to feed.title, feed.link, class: "text-light" %></li>
        <%end%>
        </ul>
      <%end%>
      <ul>
    </div>
    <div class="col-md-8 bg-light text-dark">
      <!-- 
      <h3>Posts</h3>
      <ul>
      <% @user.posts.each do |post| %>
