<div class="form-container">
  <%= form_for @user, url: '/login', method: :post do |f|%>
    <div class="form-group">
      <%= f.label :username, "Username:"%>
      <%= f.text_field :username, placeholder: "Enter Username", class: "form-control" %>
    </div>
    <div class="form-group" >
      <%= f.label :password, "Password:"%>
      <%= f.password_field :password, placeholder: "Enter Password", class: "form-control" %>
    </div>
    <%= f.submit "Login", class: "btn btn-default btn-primary btn-block" %>
  <%end%>
</div>
