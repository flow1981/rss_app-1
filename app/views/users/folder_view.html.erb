<h1>This is a folder view for <%= @folder.name %></h1>

<div>
  <h3>+ Feed</h3>
  <%# require "byebug" byebug %>
  <%= form_tag ({controller: 'users', action: 'new_feed', method: 'post'}) do %>
    <%= text_field(:feed, :link) %>
    <%= collection_select(:feed, :folder_id, @user.folders, :id, :name) %>
    <input type=submit value='add feed'>
  <% end %>
</div>



<div>
  <h3>Folder > Feeds > Posts</h3>
  <ul>
  <% @folder.feeds.each do |feed| %>
    <li><%= link_to feed.title %></li>

    <ul>
    <% feed.posts.each do |post| %>
      <li><%= link_to post.title, post.link %></li>
    <%end%>
    </ul>

  <%end%>
  </ul>
</div>
