<%= form_for @user, url: '/signup', method: :post do |f|%>
  <div class="form-group">
    <%= f.label :name, "Hi! 🙋🏻‍♀️ What's your name?"%>
    <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
  </div>
  <div class="form-group">
    <%= f.label :email, "And your email?"%>
    <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
  </div>
  <div class="form-group">
    <%= f.label :username, "Username?"%>
    <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
  </div>
  
  <div class="form-group">
    <%= f.label :password, "Ok! And your password?"%>
    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "Give us that password one last time."%>
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
  </div>
  <%= f.submit "Sign Up", class: "btn btn-default btn-primary" %>
<%end%>